<?xml version="1.0" encoding="UTF-8"?>

<project>
	<pomVersion>3</pomVersion>
	<name>Sakai GradTools Components Package</name>
	<groupId>sakaiproject</groupId>
	<id>sakai-gradtools-components</id>
	<currentVersion>2.0.0</currentVersion>
	<organization>
		<name>University of Michigan</name>
		<url>http://sakaiproject.org/</url>
	</organization>
	<inceptionYear>2003</inceptionYear>

	<properties>
		<!-- deploy as a components -->
		<deploy.type>components</deploy.type>
	</properties>

	<dependencies>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-gradtools-component</artifactId>
			<version>${pom.currentVersion}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-legacy-util</artifactId>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
			<version>${pom.currentVersion}</version>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-util-xml</artifactId>
			<version>${pom.currentVersion}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-util-java</artifactId>
			<version>${pom.currentVersion}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-util-text</artifactId>
			<version>${pom.currentVersion}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

	</dependencies>

	<build>

		<!-- java source -->
		<sourceDirectory>src/java</sourceDirectory>

	</build>

</project>
