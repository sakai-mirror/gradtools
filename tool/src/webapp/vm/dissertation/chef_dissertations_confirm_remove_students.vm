## Remove Students Confirmation - Rackham administrator confirms removal of students
<div class="portletBody">
	##<form name="confirmRemoveStudents" id="confirmRemoveStudents" 
	   ##method="post" action="#toolForm($action)">
	   	<form name="confirmRemoveStudents" 
			id="confirmRemoveStudents" 
			action="#toolForm($action)" 
			method="post">
			<input type="hidden" name="option" value="remove" />
			<input type="hidden" name="eventSubmit_doRemove_students_confirmed" value="x" />
		<h3>
			Remove Students	
		</h3>
		<div class="instruction">
		<p>
			You have chosen to remove $n student(s). Please confirm below, then
			choose "Remove" to process.
		</p>
		</div>
		#if($uniqnames)
			<h4>Uniqnames</h4>
			#foreach ($uniqname in $uniqnames)
				<p>$validator.escapeHtml($uniqname)</p>
			#end
		#end
		
		##<p class="act">
			
				##<input type="submit" name="eventSubmit_doRemove_students_confirmed" 
					##id="eventSubmit_doRemove_students_confirmed" class="active"
					##value="Remove" />
				##<input type="submit" name="eventSubmit_doCancel_remove_students"
					##id="eventSubmit_doCancel_remove_students" value="Cancel" />			

		##</p>
		<p class="act">
			<input 
				type="submit"
				name="RemoveStudents"
				id="RemoveStudents"
				class="active"
				value="Remove"
				onclick="showNotif('submitnotif','RemoveStudents','confirmRemoveStudents'); 
					document.confirmRemoveStudents.submit(); return false;" />
			<input 
				type="submit"
				name="Cancel"
				id="Cancel"
				value="Cancel"
				onclick="document.confirmRemoveStudents.option.value='cancel'; 
					document.confirmRemoveStudents.submit(); return false;" />			
			<span id="submitnotif" 
				style="visibility:hidden">Processing......</span>	
		</p>
	</form>
</div>